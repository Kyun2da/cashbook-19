{
  "compilerOptions": {
    "baseUrl": "./",
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "allowJs": true,
    "target": "ES2016",
    "lib": ["dom", "ES2019"],
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
